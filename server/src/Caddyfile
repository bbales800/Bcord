# HTTP -> HTTPS
http://b-cord.run.place, http://www.b-cord.run.place {
  redir https://www.b-cord.run.place{uri}
}

# Primary HTTPS site
https://b-cord.run.place, https://www.b-cord.run.place {
  encode zstd gzip

  # ---- static tester UI ----
  root * /srv/tester
  file_server

  # ---- WebSocket proxy to BCord server ----
  @ws path /ws*
  reverse_proxy @ws bcord:9000
}
